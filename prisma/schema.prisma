datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  directUrl         = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Video {
  id          String    @id @default(cuid())
  name        String
  name_s3     String
  user_id     String
  length      Int
  stored     String
  aligned  Boolean
  submitted DateTime
  deleted    Boolean?
  emojis     Boolean
  music     Boolean
  silent   Boolean
  done      Boolean @default(false)
  task_id     String?
  thumbnail   String?
}

model Account {
  user_id String @id
  videos_remaining Int
  videos_stored Int
  current_duration Int
  can_emojis Boolean
  can_music Boolean
}

model Buyings {
  id          String    @id @default(cuid())
  user_id     String
  plan        String
  date       DateTime
  onjoin     Boolean
}

model Task {
  id          String    @id @default(cuid())
  video_id    String
  time_transcription Float?
  aligned   Boolean
  time_alignment Float?
  time_encoding Float?
  emojis     Boolean
  music     Boolean
  silent   Boolean
  done_at DateTime?
  done   Boolean @default(false)
}

model Support {
  id          String    @id @default(cuid())
  user_id     String
  message     String
  email      String
  title     String
  date       DateTime
  done      Boolean @default(false)
}